<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview_timeunit">
        <item name="android:background">@drawable/textview_timeunit</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">48dp</item>
        <item name="android:width">48dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_timeadjust">
        <item name="android:height">45dp</item>
        <item name="android:width">45dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="button_adjuststate">
        <item name="android:background">@drawable/button_controlstate</item>
        <item name="android:height">48dp</item>
        <item name="android:width">130dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="button_stopalarm">
        <item name="android:background">@drawable/button_stopalarm</item>
        <item name="android:height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
